<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.niriqiang.cashPlayBook.dao.IncomeMapper">
    <resultMap id="BaseResultMap" type="cn.niriqiang.cashPlayBook.model.Income">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="open_id" jdbcType="VARCHAR" property="openId"/>
        <result column="money" jdbcType="DOUBLE" property="money"/>
        <result column="type" jdbcType="INTEGER" property="type"/>
        <result column="mark" jdbcType="VARCHAR" property="mark"/>
        <result column="create_time" jdbcType="BIGINT" property="createTime"/>
    </resultMap>
    <select id="findListByCondition" resultType="cn.niriqiang.cashPlayBook.model.Income">
        SELECT * FROM `cash&amp;planbook`.income
        <where>
            <if test="start!=null">
                create_time>=#{start}
            </if>
            <if test="end!=null">
                and create_time &lt;=#{end}
            </if>
            <if test="type!=null">
                and type =#{type}
            </if>
            <if test="gtMoney!=null">
                and money >#{gtMoney}
            </if>
            <if test="ltMoney!=null">
                and money &lt;#{ltMoney}
            </if>
            and open_id=#{openid} order by create_time desc
        </where>
    </select>
    <select id="getSumByStartAndEnd" resultType="java.lang.Double">
        SELECT sum(money)
        FROM `cash&amp;planbook`.income
        WHERE create_time >= #{start}
              AND create_time &lt;= #{end} and open_id=#{openid}
    </select>
</mapper>